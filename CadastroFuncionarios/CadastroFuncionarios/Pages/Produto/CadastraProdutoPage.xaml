<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLoja.Pages.Produto.CadastraProdutoPage"
             Title=" Cadastrar Produtos">
  
  <StackLayout Padding="10" HorizontalOptions="Center">
    <Label Text="Produto" Font="24" HorizontalOptions="Center" TextColor="White" />
    <Picker x:Name="ImagePicker" Title="Selecione a Imagem"/>
    <Entry x:Name ="EntryDescricao" Placeholder="Descricao"  
           HorizontalTextAlignment="Center"  />
    <Entry x:Name ="EntryPreco" Placeholder="Preco" 
           HorizontalTextAlignment="Center" Keyboard="Numeric"/>
    <Button x:Name="btCadastrar" Text="Cadastrar Produto" HorizontalOptions="Center" 
            BackgroundColor="Teal" TextColor="White"/>
    </StackLayout>
</ContentPage>