<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLoja.Pages.Produto.EditPage"
             Title=" Editar Produto">
  
    <StackLayout Padding="10" Spacing="10" HorizontalOptions="Center">
      <Entry x:Name ="nomeEntry" Placeholder="Nome" HorizontalTextAlignment="Center" />
      <Picker x:Name="ImagePicker" Title="Selecione a Imagem" />
      <Entry x:Name ="EntryPreco" Placeholder="Preco" HorizontalTextAlignment="Center"  Keyboard="Numeric"/>
      <StackLayout Orientation="Horizontal">
        <Button x:Name="btAtualizar" Text="Atualizar" BackgroundColor="Teal"/>
        <Button x:Name="btApagar" Text="Apagar" BackgroundColor="Teal"/>
      </StackLayout>
    </StackLayout>
</ContentPage>